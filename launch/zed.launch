<launch>
    <!-- Odometry coordinate frame -->
    <arg name="odometry_frame"       default="map" />
    <arg name="camera_model"          default="0" /> <!-- 0=ZED, 1=ZEDM-->
    <arg name="serial_number"           default="0" /> 
  <arg name="svo_file" default=""/>
  <arg name="zed_id" default="0"/>
  <!-- resolution and frame_rate:
        0: RESOLUTION_HD2K, /**< 2208*1242, available framerates: 15 fps.*/
        1: RESOLUTION_HD1080, /**< 1920*1080, available framerates: 15, 30 fps.*/
        2: RESOLUTION_HD720, /**< 1280*720, available framerates: 15, 30, 60 fps.*/
        3: RESOLUTION_VGA, /**< 672*376, available framerates: 15, 30, 60, 100 fps.*/
          -->
  <arg name="resolution" default="2"/>
  <arg name="frame_rate" default="30"/>
  
  <arg name="always_track" default="false"/>
  <arg name="confidence" default="80"/>

  <!-- <env name="ROSCONSOLE_CONFIG_FILE" value="$(find miner)/config/rosconsole.config"/> -->
    <group ns="zed">
        <include file="$(find zed_wrapper)/launch/zed_camera.launch">
            <!-- compliant mode for rviz -->
            <arg name="odometry_frame"        value="$(arg odometry_frame)" />
            <arg name="camera_model"        value="$(arg camera_model)" />
            <arg name="serial_number"           default="$(arg serial_number)" /> 
            <arg name="resolution" value="$(arg resolution)" />
            <arg name="frame_rate" value="$(arg frame_rate)" />
            <arg name="svo_file" value="$(arg svo_file)" />
            <arg name="zed_id" value="$(arg zed_id)" />
            <arg name="always_track" value="$(arg always_track)" />
        </include>
    </group>

</launch>
